{
  "hosting": [
    {
      "public": "dist/public",
      "ignore": [
        "firebase.json",
        "**/.*",
        "**/node_modules/**"
      ],
      "rewrites": [
        {
          "source": "/api/**",
          "appHosting": "fiberfriends-webapp"
        },
        {
          "source": "/ws/**",
          "appHosting": "fiberfriends-webapp"
        },
        {
          "source": "**",
          "destination": "/index.html"
        }
      ]
    }
  ],
  "apphosting": {
    "backendId": "fiberfriends-webapp",
    "source": ".",
    "env": [
      {
        "variable": "NODE_ENV",
        "value": "production"
      }
    ]
  }
}