{
  "hosting": {
    "public": "dist/public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/api/**",
        "apphosting": "fiberfriends-webapp"
      },
      {
        "source": "/ws/**",
        "apphosting": "fiberfriends-webapp"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  },
  "apphosting": {
    "source": ".",
    "backend": "fiberfriends-webapp",
    "region": "us-central1"
  }
}