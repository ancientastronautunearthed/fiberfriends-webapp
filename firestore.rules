rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users can read and write their own user document
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Users can read and write their own daily symptom logs
    match /dailySymptomLogs/{document} {
      allow read, write: if request.auth != null && 
        resource.data.userId == request.auth.uid;
      allow create: if request.auth != null && 
        request.resource.data.userId == request.auth.uid;
    }
    
    // Users can read and write their own AI companions
    match /aiCompanions/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Users can read and write their own conversation history
    match /conversationHistory/{document} {
      allow read, write: if request.auth != null && 
        resource.data.userId == request.auth.uid;
      allow create: if request.auth != null && 
        request.resource.data.userId == request.auth.uid;
    }
    
    // Users can read and write their own health insights
    match /aiHealthInsights/{document} {
      allow read, write: if request.auth != null && 
        resource.data.userId == request.auth.uid;
      allow create: if request.auth != null && 
        request.resource.data.userId == request.auth.uid;
    }
    
    // Community posts - users can read all, write their own
    match /communityPosts/{document} {
      allow read: if request.auth != null;
      allow create: if request.auth != null && 
        request.resource.data.authorId == request.auth.uid;
      allow update, delete: if request.auth != null && 
        resource.data.authorId == request.auth.uid;
    }
    
    // Challenges - read access for all authenticated users
    match /challenges/{document} {
      allow read: if request.auth != null;
    }
    
    // User challenges - users can manage their own
    match /userChallenges/{document} {
      allow read, write: if request.auth != null && 
        resource.data.userId == request.auth.uid;
      allow create: if request.auth != null && 
        request.resource.data.userId == request.auth.uid;
    }
    
    // Achievements - read access for all authenticated users
    match /achievements/{document} {
      allow read: if request.auth != null;
    }
    
    // User achievements - users can manage their own
    match /userAchievements/{document} {
      allow read, write: if request.auth != null && 
        resource.data.userId == request.auth.uid;
      allow create: if request.auth != null && 
        request.resource.data.userId == request.auth.uid;
    }
    
    // Point activities - users can read and create their own
    match /pointActivities/{document} {
      allow read: if request.auth != null && 
        resource.data.userId == request.auth.uid;
      allow create: if request.auth != null && 
        request.resource.data.userId == request.auth.uid;
    }
    
    // Anonymized research data - users can contribute their own data
    match /anonymizedResearchData/{document} {
      allow create: if request.auth != null && 
        request.resource.data.userId == request.auth.uid;
    }
  }
}